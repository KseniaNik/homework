<persistence
        xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0">
    <persistence-unit name="homework">

        <class>homework.model.Office</class>
        <class>homework.model.Employee</class>
        <class>homework.model.Service</class>
        <class>homework.model.Article</class>
        <class>homework.model.Order</class>

        <properties>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
            <!-- db url -->
            <property name="hibernate.connection.url"
                      value="jdbc:mysql://localhost/homework?createDatabaseIfNotExists=true"/>
            <!-- credentials -->
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="admin"/>

            <!--<property name="hibernate.connection.autocommit" value="true"/>-->

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
        </properties>

    </persistence-unit>
</persistence>